// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String   @id @default(cuid())
  name            String?
  email           String?   @unique
  phone           String?   @unique
  emailVerified   DateTime?
  phoneVerified   DateTime?
  image           String?
  rating          Float?   @default(5.0)
  onTimeReturnRate Float?  @default(100.0) // Calculated field
  walletBalance   Int      @default(0) // In smallest currency unit (e.g., paise)
  frozenBalance   Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  accounts      Account[]
  sessions      Session[]
  books         Book[]
  transactions  Transaction[] @relation("TransactionInitiator")
  vouches       Vouch[]       @relation("VouchRecipient")
  vouchesGiven  Vouch[]       @relation("VouchGiver")
  ledgerEntries TransactionLedger[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Book {
  id                String   @id @default(cuid())
  title             String
  author            String
  isbn              String?
  condition         String   // e.g., "Like New", "Good", "Acceptable"
  description       String?
  photos            String[] // URLs to images in R2
  suggestedDeposit  Int?     // Owner's suggestion
  price             Int?     // For Sell mode
  available         Boolean  @default(true)
  mode              TransactionMode
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  // For Co-Ownership (Future)
  // coOwnerIds String[]
}

model Transaction {
  id                 String            @id @default(cuid())
  status             TransactionStatus
  mode               TransactionMode
  depositAmount      Int?              // Frozen for borrow/swap
  serviceFee         Int?              // Deducted from initiator's wallet
  finalPrice         Int?              // For sales, deducted from initiator's wallet
  requestedAt        DateTime          @default(now())
  acceptedAt         DateTime?
  dueDate            DateTime?         // For borrow/swap
  pickedUpAt         DateTime?
  returnedAt         DateTime?
  qrCodeIdentifier   String            @unique // Unique ID for QR/OTP generation
  ownerPhotosOnReturn String[]?        // URLs to images taken by owner on return
  initiatorPhotosOnPickup String[]?    // URLs to images taken by initiator on pickup

  bookId     String
  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  initiatorId String
  initiator  User     @relation("TransactionInitiator", fields: [initiatorId], references: [id], onDelete: Cascade)
  recipientId String  // Usually the owner, or the other swapper
  recipient  User     @relation("TransactionRecipient", fields: [recipientId], references: [id], onDelete: Cascade)

  ledgerEntries TransactionLedger[]
}

model TransactionLedger {
  id              String   @id @default(cuid())
  amount          Int      // Positive for credit, negative for debit
  type            LedgerType
  purpose         LedgerPurpose
  razorpayOrderId String?
  status          LedgerStatus @default(COMPLETED)
  timestamp       DateTime @default(now())

  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactionId String?
  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: Cascade)
}

model Vouch {
  id          String @id @default(cuid())
  giverId     String
  giver       User   @relation("VouchGiver", fields: [giverId], references: [id], onDelete: Cascade)
  recipientId String
  recipient   User   @relation("VouchRecipient", fields: [recipientId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@unique([giverId, recipientId])
}

// Enums
enum TransactionStatus {
  REQUESTED
  ACCEPTED
  PAYMENT_PENDING // For wallet top-up if needed
  CONFIRMED       // Payment successful, QR code generated
  PICKUP_READY
  PICKED_UP       // QR scanned at pickup
  RETURN_PENDING
  RETURNED        // QR scanned at return
  COMPLETED       // Deposit refunded, fees settled
  CANCELLED
  DISPUTED
  LATE
}

enum TransactionMode {
  BORROW
  SELL
  CO_OWN
  ROTATE
}

enum LedgerType {
  CREDIT
  DEBIT
}

enum LedgerPurpose {
  ADD_MONEY
  WITHDRAWAL
  SERVICE_FEE
  DEPOSIT_FREEZE
  DEPOSIT_REFUND
  DEPOSIT_FORFEIT
  LATE_FEE
  SALE_PAYMENT
  PAYOUT
}

enum LedgerStatus {
  PENDING
  COMPLETED
  FAILED
}