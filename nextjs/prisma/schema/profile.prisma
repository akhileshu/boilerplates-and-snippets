model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?   @unique
  emailVerified      DateTime? @map("email_verified")
  image              String?
  accounts           Account[]
  sessions           Session[]
  isProfileSetupDone Boolean   @default(false)

  // Core Relations
  preferences     UserPreference?



  @@map("users") // table name , recommened - Databases often use plural, snake_case names
}

